@{
	ViewData["Title"] = "Login";
	Layout = null;
}
<!DOCTYPE html>
<html>
<head>

	<link rel="stylesheet" href="~/css/login.css" />
	<link rel="stylesheet" href="~/css/fontawesomex.css" />
</head>
<body>

	<div class="container">
		<div class="screen">
			<div class="screen__content">
				<form class="login" id="loginForm" method="post">
					<h3 class="admin__text">Admin Giris</h3>
					<div class="login__field">
						<i class="login__icon fa fa-user"></i>
						<input type="text" name="username" id="message" class="login__input" placeholder="Kullanıcı adı" required="">
					</div>
					<div class="login__field">
						<i class="login__icon fa fa-lock"></i>
						<input type="password" name="password" id="password" class="login__input" placeholder="Sifre" required="">
					</div>

					@if (!string.IsNullOrEmpty(ViewBag.Message))
					{
						<p class="login__error">@ViewBag.Message</p>
					}

					<button class="button login__submit">
						<span class="button__text">Giriş</span>

					</button>

				</form>


			</div>
			<div class="screen__background">
				<span class="screen__background__shape screen__background__shape4"></span>
				<span class="screen__background__shape screen__background__shape3"></span>
				<span class="screen__background__shape screen__background__shape2"></span>
				<span class="screen__background__shape screen__background__shape1"></span>
			</div>
		</div>
	</div>

</body>
</html>